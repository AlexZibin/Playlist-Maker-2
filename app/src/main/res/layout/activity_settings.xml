<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="start"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/icon_arrow_back_48" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/title_font_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            />

        <ImageView
            android:id="@+id/some_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/icon_share"
        />
    </LinearLayout>
    <!-- см. 3 строки выше - src="@drawable/icon_share" - Правильный icon не скачивается.
    Поставил icon_share как заглушку-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:orientation="horizontal">

        <TextView
            style="@style/StandardTextView2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            />
        <Switch
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            />
    </LinearLayout>

    <TextView
        style="@style/StandardTextView2"
        android:drawableRight="@drawable/icon_share"
        android:text="@string/share_app"
        />

    <TextView
        style="@style/StandardTextView2"
        android:drawableRight="@drawable/icon_support"
        android:text="@string/write_support"
        />

    <TextView
        style="@style/StandardTextView2"
        android:drawableRight="@drawable/icon_arrow_forward_24"
        android:text="@string/user_agreement"
        />

</LinearLayout>


